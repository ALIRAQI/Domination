        <item name="android:actionBarWidgetTheme">@null</item>
        <item name="android:actionBarTheme">@*android:style/ThemeOverlay.Material.Dark.ActionBar</item>
        <item name="android:colorPrimary">#ff111111</item>
        <item name="android:colorPrimaryDark">#ff000000</item>
        <item name="android:colorAccent">#ff787878</item>
        <item name="android:backgroundTint">@*android:color/background_dark</item>
        <item name="android:actionBarPopupTheme">@*android:style/ThemeOverlay.Material.Dark</item>
